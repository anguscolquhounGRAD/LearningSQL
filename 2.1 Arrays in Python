[1, 2, 3] + [4, 5, 6]

>>> [1 + 2 + 3] + [4, 5, 6]


#Membership operation , using in 

'butter' in Shopping  #Gives True



#Given array A consisting of N integers, return the reversed array

array = [2, 6, 2 , 7, 9]

def reverseint(array):
    reversedarry = []
    for i in array:
        reversedarry.insert(0, i)
    return reversedarry

print(reverseint(array))

#ARRAY QUESTION     




A = [1, 1, 2, 1, 1, 3]
K = 2

def solution(A, K):
    blankarray = [0] * len(A)
    counter = len(A)
    for i in range(len(A)):
        new_position = (i + K) % len(A)             #I was somewhat close,
        blankarray[new_position] = A[i]     #Using the % command means that if the LHS
    return blankarray                    #Is smaller, then it will equal the LHS
                                         #If the RHS is bigger so say K=2 and i is 5, 
                                         #The new position flips to the other side because 7 % 5 is 2

print(solution(A, K))







